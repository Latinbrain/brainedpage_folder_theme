<!doctype html> 
<html class="no-js">
  
{% snippet 'head' %}

<body class="single">

  <!-- HEADER -->
  {% snippet 'header' %}
  <!-- ENDS HEADER -->
  
  <!-- MAIN -->
  <div id="main">
    <div class="wrapper cf">
    
      <!-- masthead -->
      <div class="masthead cf">
        OUR BLOG
      </div>
      <!-- ENDS masthead -->
        
      <!-- posts list -->
      <div id="posts-list" class="cf">          

        {% if post.type == 'video' %}
          <!-- Video -->
          {% snippet 'post_video' %}
          <!-- ENDS Video -->
        
        {% elsif post.type == 'link' %}
          <!-- Link -->
          {% snippet 'post_link' %}
          <!-- ENDS Link -->

        {% elsif post.type == 'status' %}
          <!-- status -->
          {% snippet 'post_status' %}
          <!-- ENDS status -->

        {% elsif post.type == 'photo' %}
          <!-- Image -->
          {% snippet 'post_photo' %}
          <!-- ENDS Image -->

        {% elsif post.type == 'note' %}
          <!-- Note -->
          {% snippet 'post_note' %}
          <!-- ENDS Note -->

        {% else %}
          <!-- Default -->
          {% snippet 'post_default' %}
          <!-- ENDS  Default -->

        {% endif %}

      </div>
      <!-- ENDS posts list -->
    
    <!-- SIDEBAR -->
    {% snippet 'sidebar' %}
    <!-- ENDS SIDEBAR -->
    
    </div>
    <!-- ENDS WRAPPER -->
  </div>
  <!-- ENDS MAIN -->
  
  {% snippet 'footer' %}

</body>
</html>